<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Page.Title</title>
    <link rel="icon" type="image/x-icon" href="~/Content/images/icon.png">
    @RenderSection("styles", required: false)
    <style>
        .form_option {
            margin: 5px;
        }
        .log_form {
            margin: 50px auto;
            padding: 10px;
            background-color: aqua;
            width: 300px;
            height: 150px;
        }
    </style>
</head>
<body>
    <div class="header">
            <div class="header_cont">

                <div class="autorization">
                    <a href="/Index">Main</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="/Pages/Autorization/Logout">Log Out</a>
                        <p>You are <span class="user_name">@User.Identity.Name </span></p>
                    }
                    else
                    {
                        @:<a href="/Pages/Autorization/Login">Log In</a> or <a href="/Pages/Autorization/Registration">Registration</a>
                        <p>You are <span class="user_name">Guest</span></p>
                    }
                </div>
            </div>
        </div>

    @RenderPage("/Pages/Partial/_NavigationPartial.cshtml")

    <div class="page_common_cont">
        @RenderBody()
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
