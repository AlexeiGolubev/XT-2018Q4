@using Epam.Task11_12.WebPagesPL.CS;

@{
    if (IsAjax)
    {
        int.TryParse(Request.Params["id"], out var id);

        if (id > 0 && BLLProvider.userLogic.GetById(id) != null)
        {
            foreach (var item in BLLProvider.awardedUsersLogic.GetAll())
            {
                if (item.IdUser == id)
                {
                    BLLProvider.awardedUsersLogic.Delete(id, item.IdAward);
                }
            }

            BLLProvider.userLogic.Delete(id);

            @(1);
        }

        return;
    }
}